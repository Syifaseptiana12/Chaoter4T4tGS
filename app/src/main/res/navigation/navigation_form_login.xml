<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_form_login"
    app:startDestination="@id/formLoginFragment">

    <fragment
        android:id="@+id/formLoginFragment"
        android:name="com.example.chapter3_navcomponent.form_login.FormLoginFragment"
        android:label="fragment_form_login"
        tools:layout="@layout/fragment_form_login" >
        <action
            android:id="@+id/action_formLoginFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
        <action
            android:id="@+id/action_formLoginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_formLoginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_formLoginFragment_to_helpFragment"
            app:destination="@id/helpFragment" />
        <action
            android:id="@+id/action_formLoginFragment_to_lupasFragment"
            app:destination="@id/lupasFragment" />
    </fragment>
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.chapter3_navcomponent.form_login.ChatFragment"
        android:label="fragment_chat"
        tools:layout="@layout/fragment_chat" />
    <fragment
        android:id="@+id/helpFragment"
        android:name="com.example.chapter3_navcomponent.form_login.HelpFragment"
        android:label="fragment_help"
        tools:layout="@layout/fragment_help" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.chapter3_navcomponent.form_login.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/lupasFragment"
        android:name="com.example.chapter3_navcomponent.form_login.LupasFragment"
        android:label="fragment_lupas"
        tools:layout="@layout/fragment_lupas" />
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.chapter3_navcomponent.form_login.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" />
</navigation>